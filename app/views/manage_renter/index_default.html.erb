<table>
  <tr>
  <% for column in Renter.content_columns %>
    <th style = "none"><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for renter in @renters %>
  <tr>
  <% for column in Renter.content_columns %>
    <td><%=h renter.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'renter', :id => renter, :back => 'renter' %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => renter %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => renter }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>


